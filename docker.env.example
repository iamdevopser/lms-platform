# Docker Environment Configuration for LMS Platform

# Application
APP_NAME="OnliNote LMS"
APP_ENV=production
APP_KEY=base64:your_app_key_here
APP_DEBUG=false
APP_URL=http://localhost

# Database
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=lms_platform
DB_USERNAME=lms_user
DB_PASSWORD=lms_password
DB_ROOT_PASSWORD=rootpassword

# Redis
REDIS_HOST=redis
REDIS_PASSWORD=
REDIS_PORT=6379

# Cache & Session
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@onlinote.com"
MAIL_FROM_NAME="${APP_NAME}"

# Stripe Payment
STRIPE_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost/auth/google/callback

# File Storage
FILESYSTEM_DISK=local
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Broadcasting
BROADCAST_DRIVER=log
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# Mobile App
API_URL=http://localhost
MOBILE_APP_VERSION=1.0.0

# Security
BCRYPT_ROUNDS=12
JWT_SECRET=your_jwt_secret_key
JWT_TTL=60

# Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Elasticsearch (Optional)
ELASTICSEARCH_HOST=elasticsearch:9200
ELASTICSEARCH_INDEX=lms_platform

# CDN (Optional)
CDN_URL=
CDN_ENABLED=false

# Analytics
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=

# Push Notifications
FCM_SERVER_KEY=
FCM_SENDER_ID=

# SMS (Optional)
SMS_PROVIDER=twilio
TWILIO_SID=
TWILIO_TOKEN=
TWILIO_FROM=

# Backup
BACKUP_DISK=local
BACKUP_RETENTION_DAYS=30

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_PWA_FEATURES=true
ENABLE_MOBILE_APP=true
ENABLE_ANALYTICS=true
ENABLE_PAYMENTS=true





